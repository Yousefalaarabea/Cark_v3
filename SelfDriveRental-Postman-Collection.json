{
  "info": {
    "_postman_id": "cark-app-payments-collection-2024-06-01",
    "name": "Cark App Payments API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Visa Card",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"tok_123456789\",\n  \"card_brand\": \"Visa\",\n  \"card_last_four_digits\": \"1234\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/payments/add-card/",
          "host": ["{{base_url}}"],
          "path": ["payments", "add-card", ""]
        }
      },
      "response": []
    },
    {
      "name": "List Payment Methods",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/payments/payment-methods/",
          "host": ["{{base_url}}"],
          "path": ["payments", "payment-methods", ""]
        }
      },
      "response": []
    },
    {
      "name": "Pay with Card",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": \"100.00\",\n  \"payment_method_type\": \"card\",\n  \"payment_method_id\": \"{{card_id}}\",\n  \"payment_for\": \"deposit\",\n  \"rental_type\": \"rental\",\n  \"rental_id\": \"{{rental_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/payments/pay/",
          "host": ["{{base_url}}"],
          "path": ["payments", "pay", ""]
        }
      },
      "response": []
    },
    {
      "name": "Pay with Wallet",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": \"50.00\",\n  \"payment_method_type\": \"wallet\",\n  \"payment_method_id\": \"{{wallet_id}}\",\n  \"payment_for\": \"deposit\",\n  \"rental_type\": \"selfdrive\",\n  \"rental_id\": \"{{selfdrive_rental_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/payments/pay/",
          "host": ["{{base_url}}"],
          "path": ["payments", "pay", ""]
        }
      },
      "response": []
    },
    {
      "name": "Admin: List All Payment Transactions",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/payments/admin/transactions/",
          "host": ["{{base_url}}"],
          "path": ["payments", "admin", "transactions", ""]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" },
    { "key": "user_token", "value": "" },
    { "key": "admin_token", "value": "" },
    { "key": "card_id", "value": "" },
    { "key": "wallet_id", "value": "" },
    { "key": "rental_id", "value": "" },
    { "key": "selfdrive_rental_id", "value": "" }
  ]
} 